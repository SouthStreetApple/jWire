<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/textview_hint_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/textview_hint_author" />

        <TextView
            android:id="@+id/item_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:backgroundTint="@color/colorAccent"
            android:ellipsize="end"
            android:hint="@string/textview_hint_section"
            android:maxLines="1"
            android:textColor="@color/textview_section_textcolor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/textview_hint_date_time" />

    </LinearLayout>
</LinearLayout>